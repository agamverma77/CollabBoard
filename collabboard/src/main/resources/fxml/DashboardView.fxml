                               styleClass="action-description" wrapText="true"/>
                        <Button fx:id="joinSessionBtn" text="Join" styleClass="action-button"/>
                    </VBox>

                    <VBox styleClass="action-card" spacing="10" HBox.hgrow="ALWAYS">
