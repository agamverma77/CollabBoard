                        <Label text="Browse Templates" styleClass="action-title"/>
                        <Label text="Explore pre-built templates to jumpstart your projects."
                               styleClass="action-description" wrapText="true"/>
                        <Button fx:id="browseTemplatesBtn" text="Browse" styleClass="action-button"/>
