<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.collabboard.controller.DashboardController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Dashboard">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <Label fx:id="welcomeLabel" style="-fx-font-size: 16px;" text="Welcome!" />
      
      <Button fx:id="createRoomButton" onAction="#handleCreateRoom" prefHeight="40.0" prefWidth="250.0" text="Create New Room (Host)" />
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="ipAddressField" prefHeight="40.0" promptText="Enter Host IP Address" />
            <Button fx:id="joinRoomButton" onAction="#handleJoinRoom" prefHeight="40.0" text="Join Room" />
         </children>
      </HBox>
      
      <Label fx:id="messageLabel" style="-fx-text-fill: green;" wrapText="true" />

      <Button onAction="#handleLogoutButtonAction" text="Logout" style="-fx-background-color: #f44336; -fx-text-fill: white; margin-top: 20px;" />
   </children>
</VBox>