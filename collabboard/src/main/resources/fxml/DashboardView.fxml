                    </HBox>
                </VBox>

                <!-- Total Projects Card -->
                <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region styleClass="stat-icon,stat-icon-green"/>
                        <Label text="Total Projects" styleClass="stat-title"/>
                    </HBox>
                    <Label fx:id="totalProjectsLabel" text="47" styleClass="stat-value"/>
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label text="↑" styleClass="stat-arrow-up"/>
                        <Label text="+5 new this month" styleClass="stat-change"/>
                    </HBox>
                </VBox>

                <!-- Team Members Card -->
                <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region styleClass="stat-icon,stat-icon-orange"/>
                        <Label text="Team Members" styleClass="stat-title"/>
                    </HBox>
                    <Label fx:id="teamMembersLabel" text="28" styleClass="stat-value"/>
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label text="↑" styleClass="stat-arrow-up"/>
                        <Label text="+3 joined recently" styleClass="stat-change"/>
                    </HBox>
                </VBox>

                <!-- Hours Collaborated Card -->
                <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region styleClass="stat-icon,stat-icon-pink"/>
                        <Label text="Hours Collaborated" styleClass="stat-title"/>
                    </HBox>
                    <Label fx:id="hoursCollaboratedLabel" text="156" styleClass="stat-value"/>
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label text="↑" styleClass="stat-arrow-up"/>
                        <Label text="+12h this week" styleClass="stat-change"/>
                    </HBox>
                </VBox>
            </HBox>
            <!-- Quick Actions -->
            <VBox spacing="15">
                <Label text="Quick Actions" styleClass="section-title"/>
