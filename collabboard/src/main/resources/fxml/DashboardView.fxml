                        <Label text="Create New Session" styleClass="action-title"/>
                        <Label text="Start a new collaboration session with your team members."
                               styleClass="action-description" wrapText="true"/>
                        <Button fx:id="createSessionBtn" text="Create" styleClass="action-button"/>
                    </VBox>

