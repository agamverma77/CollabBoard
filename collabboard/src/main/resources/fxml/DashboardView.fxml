            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5">
                    <Label text="Welcome back, Sarah!" styleClass="welcome-title"/>
                    <Label text="Ready to collaborate and create amazing things together?"
                           styleClass="welcome-subtitle"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox spacing="2" alignment="TOP_RIGHT">
                    <Label text="Today" styleClass="date-label"/>
