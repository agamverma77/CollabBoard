            </HBox>

            <!-- Stats Cards -->
            <HBox spacing="20">
                <!-- Active Sessions Card -->
                <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region styleClass="stat-icon,stat-icon-blue"/>
                        <Label text="Active Sessions" styleClass="stat-title"/>
                    </HBox>
                    <Label fx:id="activeSessionsLabel" text="12" styleClass="stat-value"/>
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label text="↑" styleClass="stat-arrow-up"/>
