<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.collabboard.controller.DashboardController"
            styleClass="dashboard">

    <!-- Main Dashboard Content (Center) -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="30" right="20" bottom="30" left="40"/>
