<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.collabboard.controller.SignupController"
           stylesheets="@css/auth.css"
           styleClass="root">
    <children>
        <!-- Animated Background -->
        <Pane fx:id="animationPane" styleClass="animation-pane"/>

        <!-- Signup Card -->
        <VBox alignment="CENTER" spacing="0" maxWidth="450" maxHeight="650">
            <VBox styleClass="auth-card" spacing="20" alignment="CENTER">
                <padding>
                    <Insets top="40" right="50" bottom="40" left="50"/>
                </padding>

                <!-- Logo and Title -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="CollabBoard" styleClass="logo-text"/>
                    <Label text="Create your account" styleClass="subtitle-text"/>
                    <Label text="Join thousands of teams collaborating" styleClass="description-text"/>
                </VBox>

                <!-- Signup Form -->
                <VBox spacing="15" alignment="CENTER">
                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField" 
                                  promptText="Enter your username" 
                                  styleClass="auth-textfield"/>
                    </VBox>

                    <!-- Email Field -->
                    <VBox spacing="8">
                        <Label text="Email Address" styleClass="field-label"/>
                        <TextField fx:id="emailField" 
                                  promptText="Enter your email" 
                                  styleClass="auth-textfield"/>
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" 
                                      promptText="Create a password (min 6 characters)" 
                                      styleClass="auth-textfield"/>
                    </VBox>

                    <!-- Confirm Password Field -->
                    <VBox spacing="8">
                        <Label text="Confirm Password" styleClass="field-label"/>
                        <PasswordField fx:id="confirmPasswordField" 
                                      promptText="Confirm your password" 
                                      styleClass="auth-textfield"/>
                    </VBox>

                    <!-- Error/Message Label -->
                    <Label fx:id="messageLabel" styleClass="error-label" text="" wrapText="true"/>

                    <!-- Terms Checkbox (visual only) -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <CheckBox fx:id="termsCheckBox"/>
                        <Label text="I agree to the " styleClass="description-text"/>
                        <Hyperlink text="Terms and Conditions" styleClass="link"/>
                    </HBox>

                    <!-- Signup Button -->
                    <Button text="Create Account" onAction="#handleSignupButtonAction" 
                            styleClass="primary-auth-button" maxWidth="Infinity"/>

                    <!-- Divider -->
                    <HBox alignment="CENTER" spacing="10">
                        <Separator HBox.hgrow="ALWAYS"/>
                        <Label text="OR" styleClass="divider-text"/>
                        <Separator HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <!-- Social Signup Buttons -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Google" styleClass="social-button" prefWidth="130"/>
                        <Button text="GitHub" styleClass="social-button" prefWidth="130"/>
                    </HBox>

                    <!-- Login Link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Already have an account?" styleClass="description-text"/>
                        <Hyperlink text="Login" onAction="#handleLoginLinkAction" styleClass="link-bold"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </children>
</StackPane>
