<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.collabboard.controller.LoginController">
   <children>
      <Label style="-fx-font-size: 24px;" text="CollabBoard Login" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <Button onAction="#handleLoginButtonAction" text="Login" />
      <Hyperlink onAction="#handleSignupLinkAction" text="Don't have an account? Sign Up" />
      <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
   </children>
</VBox>

