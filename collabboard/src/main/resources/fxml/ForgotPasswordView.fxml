<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.collabboard.controller.ForgotPasswordController">
    <children>
        <Label text="Forgot Password">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Enter your email to receive a reset code." />
        <TextField fx:id="emailField" maxWidth="250.0" promptText="Email" />
        <Button onAction="#handleSendOtpAction" text="Send OTP" />
        <Label fx:id="messageLabel" style="-fx-text-fill: green;" />
        <Hyperlink onAction="#handleBackToLoginAction" text="Back to Login" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
