<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.collabboard.controller.WhiteboardController">
    <top>
        <ToolBar>
            <items>
                <Label text="Tools:" />
                <Button text="Pen" />
                <Button text="Eraser" />
                <ColorPicker fx:id="colorPicker" />
                
                <!-- This Pane pushes the room code to the right side of the toolbar -->
                <Pane HBox.hgrow="ALWAYS" />

                <Label fx:id="roomCodeLabel" style="-fx-font-weight: bold;" text="Room Code: ..." />
            </items>
        </ToolBar>
    </top>
    <center>
        <Canvas fx:id="canvas" width="800.0" height="600.0" BorderPane.alignment="CENTER" />
    </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>

